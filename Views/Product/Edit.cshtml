@model Product
@{
}

<div class="container">
	<form asp-action="Edit" asp-controller="Product" method="post" asp-route-id="@Model.Id" >
		<label asp-for="Name"></label>
		<input type="text" class="form-control" name="name" placeholder="@Model.Name"/>
		<label asp-for="Color"></label>
		<input type="text" class="form-control" name="color" placeholder="@Model.Color"/>
		<label asp-for="Quantity"></label>
		<input type="text" class="form-control" name="quantity" placeholder="@Model.Quantity"/>
		<label asp-for="UnitPrice"></label>
		<input type="text" class="form-control" name="unitPrice" placeholder="@Model.UnitPrice"/>
		<br />
		<input type="submit" class="btn btn-success" value="تایید"/>
	</form>

</div>